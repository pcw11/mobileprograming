<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/l_green"
    tools:context=".ViewPlantActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
<!--TODO 메뉴 표기 추가 필요-->
        <!-- Header -->
        <TextView
            android:id="@+id/tv_greeting_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_b"
            android:text="안녕하세요!"
            android:textColor="#333333"
            android:textSize="22sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Plant Species -->
        <EditText
            android:id="@+id/et_plant_species"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_b"
            android:hint="식물 종을 입력하세요."
            android:textColor="@color/black"
            android:textSize="28sp"
            android:background="#00000000"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_greeting_add"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/iv_search_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/search"
            app:tint="@color/black"
            app:layout_constraintStart_toEndOf="@+id/et_plant_species"
            app:layout_constraintBottom_toBottomOf="@+id/et_plant_species" />

        <!-- Nickname -->
        <EditText
            android:id="@+id/et_plant_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="별명을 입력하세요."
            android:background="#00000000"
            android:textSize="16sp"
            android:textColor="@color/gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_plant_species"/>

        <!-- 물 주기 관리 카드 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_water_management"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/add_plant_card_bg"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@+id/et_plant_nickname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_water_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="물 주기 관리"
                    android:fontFamily="@font/pretendard_b"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                    android:id="@+id/iv_water_edit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/edit"
                    app:layout_constraintBottom_toBottomOf="@id/tv_water_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_water_title"
                    app:tint="@color/gray" />

                <ImageView
                    android:id="@+id/iv_water_bell"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/bell"
                    app:layout_constraintBottom_toBottomOf="@id/tv_water_title"
                    app:layout_constraintEnd_toStartOf="@id/iv_water_edit"
                    app:layout_constraintTop_toTopOf="@id/tv_water_title"
                    app:tint="@color/gray" />

                <TextView
                    android:id="@+id/tv_water_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="물 주기를 설정하세요."
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_water_title"
                    app:layout_constraintStart_toStartOf="parent"/>

                <LinearLayout
                    android:id="@+id/layout_water_cycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center_horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/tv_water_subtitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <!-- ... water cycle items ... -->

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 사진 카드 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_photo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/add_plant_card_bg"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@+id/card_water_management"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/tv_photo_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_b"
                    android:padding="16dp"
                    android:text="사진"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_photos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_photo_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:listitem="@layout/item_photo"
                    tools:itemCount="3"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 메모 카드 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_memo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/add_plant_card_bg"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@+id/card_photo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_memo_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="메모"
                    android:fontFamily="@font/pretendard_b"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                    android:id="@+id/iv_memo_add"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/add"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_memo_title"
                    app:layout_constraintBottom_toBottomOf="@id/tv_memo_title" />

                <ImageView
                    android:id="@+id/iv_memo_edit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/edit"
                    app:tint="@color/gray"
                    app:layout_constraintEnd_toStartOf="@id/iv_memo_add"
                    app:layout_constraintTop_toTopOf="@id/tv_memo_title"
                    app:layout_constraintBottom_toBottomOf="@id/tv_memo_title" />

                <LinearLayout
                    android:id="@+id/ll_memo_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_memo_title"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <Button
            android:id="@+id/btn_save_plant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="저장하기"
            android:textColor="@color/white"
            android:fontFamily="@font/pretendard_b"
            android:textSize="16sp"
            android:backgroundTint="@color/green"
            android:layout_marginTop="24dp"
            app:cornerRadius = "16dp"
            app:layout_constraintTop_toBottomOf="@id/card_memo" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>