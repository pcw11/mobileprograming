<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/l_green"
    tools:context=".AddPlantActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:id="@+id/tv_greeting_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_b"
            android:text="식물 추가"
            android:textColor="#333333"
            android:textSize="22sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_notification_add" />

        <ImageView
            android:id="@+id/iv_notification_add"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/bell"
            android:visibility="gone"
            app:tint="#555555"
            app:layout_constraintEnd_toStartOf="@+id/iv_menu_add"
            app:layout_constraintTop_toTopOf="@+id/tv_greeting_add"
            app:layout_constraintBottom_toBottomOf="@+id/tv_greeting_add" />

        <ImageView
            android:id="@+id/iv_menu_add"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/menubtn"
            android:visibility="gone"
            app:tint="#555555"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_greeting_add"
            app:layout_constraintBottom_toBottomOf="@+id/tv_greeting_add" />

        <!-- Plant Species -->
        <EditText
            android:id="@+id/et_plant_species"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_b"
            android:hint="식물 종을 입력하세요."
            android:textColor="@color/black"
            android:textSize="28sp"
            android:background="#00000000"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_greeting_add"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/iv_search_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/search"
            app:tint="@color/black"
            app:layout_constraintStart_toEndOf="@+id/et_plant_species"
            app:layout_constraintBottom_toBottomOf="@+id/et_plant_species" />

        <!-- Nickname -->
        <EditText
            android:id="@+id/et_plant_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="별명을 입력하세요."
            android:background="#00000000"
            android:textSize="16sp"
            android:textColor="@color/gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_plant_species"/>

        <!-- 물 주기 관리 카드 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_water_management"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/add_plant_card_bg"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@+id/et_plant_nickname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_water_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="물 주기 관리"
                    android:fontFamily="@font/pretendard_b"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                    android:id="@+id/iv_water_edit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/edit"
                    app:layout_constraintBottom_toBottomOf="@id/tv_water_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_water_title"
                    app:tint="@color/gray" />

                <ImageView
                    android:id="@+id/iv_water_bell"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/bell"
                    app:layout_constraintBottom_toBottomOf="@id/tv_water_title"
                    app:layout_constraintEnd_toStartOf="@id/iv_water_edit"
                    app:layout_constraintTop_toTopOf="@id/tv_water_title"
                    app:tint="@color/gray" />

                <TextView
                    android:id="@+id/tv_water_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="물 주기를 설정하세요."
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_water_title"
                    app:layout_constraintStart_toStartOf="parent"/>

                <LinearLayout
                    android:id="@+id/layout_water_cycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center_horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/tv_water_subtitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="48dp">
                        <TextView style="@style/WaterDateTextStyle" android:text="1"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/water_img"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="8dp"
                            android:visibility="gone"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="48dp">
                        <TextView style="@style/WaterDateTextStyle" android:text="2"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/water_img"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="8dp"
                            android:visibility="gone"/>
                    </RelativeLayout>
                    <RelativeLayout
                         android:layout_width="40dp"
                         android:layout_height="48dp">
                         <TextView style="@style/WaterDateTextStyle" android:text="3"/>
                        <View
                            android:layout_width="4dp"
                            android:layout_height="4dp"
                            android:layout_alignParentBottom="true"
                            android.layout_centerHorizontal="true"
                            android:layout_marginBottom="32dp"
                            android:background="@drawable/red_dot" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/water_img"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="8dp"
                            android:visibility="gone"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="48dp">
                        <TextView style="@style/WaterDateTextStyle" android:text="4"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/water_img"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="8dp"
                            android:visibility="gone"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="48dp">
                        <TextView style="@style/WaterDateTextStyle" android:text="5"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/water_img"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="8dp"
                            android:visibility="gone"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="48dp">
                        <TextView style="@style/WaterDateTextStyle" android:text="6"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/water_img"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="8dp"
                            android:visibility="gone"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="48dp">
                        <TextView style="@style/WaterDateTextStyle" android:text="7"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/water_img"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="8dp"
                            android:visibility="gone"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="48dp">
                        <TextView style="@style/WaterDateTextStyle" android:text="8"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/water_img"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="8dp"
                            android:visibility="gone"/>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 사진 카드 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_photo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/add_plant_card_bg"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@+id/card_water_management"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/tv_photo_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_b"
                    android:padding="16dp"
                    android:text="사진"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_photo_add"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/add"
                    app:tint="@color/gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toTopOf="@id/tv_photo_title"
                    app:layout_constraintBottom_toBottomOf="@id/tv_photo_title"/>

                <ImageView
                    android:id="@+id/iv_photo_edit"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/edit"
                    app:tint="@color/gray"
                    app:layout_constraintEnd_toStartOf="@id/iv_photo_add"
                    app:layout_constraintTop_toTopOf="@id/tv_photo_title"
                    app:layout_constraintBottom_toBottomOf="@id/tv_photo_title"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_photo_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            app:cardCornerRadius="16dp"
                            app:cardBackgroundColor="#7fE0E0E0">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/add"
                                android:scaleType="center"
                                android:padding="40dp"
                                app:tint="@color/gray"/>

                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </HorizontalScrollView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 메모 카드 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_memo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/add_plant_card_bg"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@+id/card_photo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/tv_memo_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="메모"
                    android:fontFamily="@font/pretendard_b"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                    android:id="@+id/iv_memo_add"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/add"
                    app:tint="@color/gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toTopOf="@id/tv_memo_title"
                    app:layout_constraintBottom_toBottomOf="@id/tv_memo_title"/>

                <ImageView
                    android:id="@+id/iv_memo_edit"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/edit"
                    app:tint="@color/gray"
                    app:layout_constraintEnd_toStartOf="@id/iv_memo_add"
                    app:layout_constraintTop_toTopOf="@id/tv_memo_title"
                    app:layout_constraintBottom_toBottomOf="@id/tv_memo_title"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_memo_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:id="@+id/ll_memo_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">
                        <!-- Memo EditTexts will be added here dynamically -->
                    </LinearLayout>
                </HorizontalScrollView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="저장하기"
            android:layout_marginTop="24dp"
            android:textColor="@color/white"
            android:fontFamily="@font/pretendard_b"
            android:backgroundTint="@color/green"
            app:layout_constraintTop_toBottomOf="@+id/card_memo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>