<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="64dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.25"
        app:srcCompat="@drawable/logo_circle" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/id_input_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_logo"
        app:layout_constraintWidth_percent="0.8">

        <EditText
            android:id="@+id/et_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/loginbg"
            android:fontFamily="@font/pretendard_n"
            android:hint="아이디를 입력하세요"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:paddingStart="56dp"
            android:paddingEnd="12dp"
            android:paddingBottom="6dp"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:textColorHint="#99000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_id_label"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_id_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_n"
            android:paddingLeft="16dp"
            android:text="ID :"
            android:layout_marginBottom="6dp"
            android:textColor="@color/l_gray"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pw_input_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_input_group"
        app:layout_constraintWidth_percent="0.8">

        <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/loginbg"
            android:fontFamily="@font/pretendard_n"
            android:hint="비밀번호를 입력하세요"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:paddingStart="56dp"
            android:paddingEnd="12dp"
            android:paddingBottom="6dp"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:textColorHint="#99000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_pw_label"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_pw_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_n"
            android:paddingLeft="16dp"
            android:layout_marginBottom="6dp"
            android:text="PW :"
            android:textColor="@color/l_gray"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/pretendard_n"
        android:minHeight="24dp"
        android:text="회원이 아니신가요? 신규 가입"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="@id/pw_input_group"
        app:layout_constraintTop_toBottomOf="@id/pw_input_group" />

    <TextView
        android:id="@+id/tv_find_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/pretendard_n"
        android:minHeight="24dp"
        android:text="비밀번호 찾기"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="@id/pw_input_group"
        app:layout_constraintTop_toBottomOf="@id/pw_input_group" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/login_n_btn"
        android:fontFamily="@font/pretendard_b"
        android:paddingTop="12dp"
        android:paddingBottom="16dp"
        android:text="LOGIN"
        android:textColor="@color/gray"
        android:textSize="22sp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_register"
        app:layout_constraintWidth_percent="0.8" />

    <CheckBox
        android:id="@+id/cb_auto_login"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/pretendard_n"
        android:text="자동 로그인"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="@id/btn_login"
        app:layout_constraintTop_toBottomOf="@id/btn_login" />

    <LinearLayout
        android:id="@+id/social_login_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cb_auto_login"
        app:layout_constraintWidth_percent="0.6">

        <ImageView
            android:id="@+id/img_social_kakao"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="24dp"
            android:contentDescription="카카오 로그인"
            app:srcCompat="@drawable/kakao" />

        <ImageView
            android:id="@+id/img_social_google"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="구글 로그인"
            app:srcCompat="@drawable/google" />

        <ImageView
            android:id="@+id/img_social_naver"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="24dp"
            android:contentDescription="네이버 로그인"
            app:srcCompat="@drawable/naver" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>